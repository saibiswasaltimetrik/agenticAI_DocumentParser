# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Bedrock Configuration
BEDROCK_MODEL_ID=mistral.mistral-large-2402-v1:0
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.1

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0
RETRY_BACKOFF=2.0
REQUEST_TIMEOUT=60

# Processing Configuration
MAX_DOCUMENT_SIZE_MB=10
OCR_ENABLED=true
OCR_LANGUAGE=eng

# Validation Thresholds
EXTRACTION_ACCURACY_THRESHOLD=0.90
PII_RECALL_THRESHOLD=0.95
PII_PRECISION_THRESHOLD=0.90
WORKFLOW_SUCCESS_THRESHOLD=0.90
P95_LATENCY_THRESHOLD=4.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs
RESPONSIBLE_AI_LOG_FILE=responsible_ai_log.json

# Output Configuration
OUTPUT_DIR=output
METRICS_FILE=metrics_report.json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
